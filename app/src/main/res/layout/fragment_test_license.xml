<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testMainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.TestLicense"
    >

    <RelativeLayout
        android:id="@+id/RLheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TVtesttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_alignParentLeft="true"
        android:text="Time: "
        />

    <TextView
        android:id="@+id/TVpagenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_alignParentRight="true"
        android:text="1/24 "
        />

    </RelativeLayout>

    <ImageView
        android:id="@+id/IVtestimg"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RLheader"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/TVtestquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/IVtestimg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Melyik auto indul el eloszor??"
        />

    <ScrollView
        android:id="@+id/SView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/TVtestquestion"
        android:layout_above="@+id/RLbottom"
        android:fillViewport="true"
        >

    <LinearLayout
        android:id="@+id/LLtestanswers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        >


        <CheckBox
            android:id="@+id/answ1"
            android:textSize="20sp"
            android:text="A piros auto indul elsonek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <CheckBox
            android:id="@+id/answ2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A kek auto indul elsonek"
            />


        <CheckBox
            android:id="@+id/answ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Egyik auto se indul eljkkd dsf d sf sd fsd f sdf ds fdsf sd fsdf sdf d s fsd f sdf sdf"
            />



    </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/RLbottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        >

        <Button
            android:id="@+id/BTNtestback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:text="Back"/>

        <Button
            android:id="@+id/BTNtestnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="NEXT"/>

    </RelativeLayout>



</RelativeLayout>
